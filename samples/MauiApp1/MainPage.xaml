<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiApp1.ViewModels"
             xmlns:app="clr-namespace:MauiApp1"
             xmlns:entityForms="clr-namespace:MauiApp1.EntityForms.ToDoModel"
             x:Class="MauiApp1.MainPage">

<!--
    the namespace MauiApp1.EntityForms.ToDoModel was auto-generated!
-->
    
    <ContentPage.BindingContext>
        <viewModels:ToDoViewModel />
    </ContentPage.BindingContext>

    <StackLayout Orientation="Vertical">
        <Label Text="{x:Static app:AppResources.NameField}"/>

        <entityForms:NameInput />
        <entityForms:DescriptionInput />

        <Button Text="Save" Command="{Binding SaveCommand}"/>
    </StackLayout>

</ContentPage>
